<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_mrp_config" model="ir.ui.view">
            <field name="name">mrp.config.settings.subcontracting</field>
            <field name="model">mrp.config.settings</field>
            <field name="inherit_id" ref="mrp.view_mrp_config"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@string='Planning']/.." position="after">
                    <group >
                        <label for="id" string="Subcontracting"/>
                        <div>
                            <div>
                                <field name="propagate_cancel" class="oe_inline"/>
                                <label for="propagate_cancel"/>
                            </div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
